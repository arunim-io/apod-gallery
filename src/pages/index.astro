---
import {APOD_API_KEY} from "astro:env/server";
import { Image } from "astro:assets";

const response = await fetch(`https://api.nasa.gov/planetary/apod?api_key=${APOD_API_KEY}&count=10`, {method:'GET'});
const data = await response.json();
const image = data[0];
console.log(data);
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro</title>
	</head>
	<body>
    <Image src={image.url} alt={image.title} inferSize />
	</body>
</html>
